<script>
const symbols = ['üçí','üçã','üçä','üçá','üçâ','‚≠ê','7Ô∏è‚É£'];
const columns = 7;
const rows = 3;
let wins = 0;
let streak = 0;

// 9 predefined win lines (row indices per column)
const winLines = [
  [0,0,0,0,0,0,0], // top row
  [1,1,1,1,1,1,1], // middle row
  [2,2,2,2,2,2,2], // bottom row
  [0,1,2,1,0,1,2], // zigzag 1
  [2,1,0,1,2,1,0], // zigzag 2
  [0,0,1,1,2,2,2], // diagonal / multi
  [2,2,1,1,0,0,0],
  [1,0,1,2,1,0,1],
  [1,2,1,0,1,2,1]
];

// Generate grid cells
const reelsContainer = document.getElementById('reels');
let grid = [];
for(let r=0;r<rows;r++){
  grid[r]=[];
  for(let c=0;c<columns;c++){
    const cell = document.createElement('div');
    cell.className='cell';
    reelsContainer.appendChild(cell);
    grid[r][c]=cell;
  }
}

// Spin logic
document.getElementById('spinButton').addEventListener('click', spin);

function spin(){
  // Clear previous wins
  for(let r=0;r<rows;r++){
    for(let c=0;c<columns;c++){
      grid[r][c].classList.remove('win');
    }
  }

  // Randomize symbols
  for(let r=0;r<rows;r++){
    for(let c=0;c<columns;c++){
      const sym = symbols[Math.floor(Math.random()*symbols.length)];
      grid[r][c].textContent = sym;
    }
  }

  // Check wins
  let anyWin=false;
  winLines.forEach(line=>{
    const firstSym = grid[line[0]][0].textContent;
    let lineWin=true;
    for(let c=1;c<columns;c++){
      if(grid[line[c]][c].textContent !== firstSym){
        lineWin=false;
        break;
      }
    }
    if(lineWin){
      anyWin=true;
      for(let c=0;c<columns;c++){
        grid[line[c]][c].classList.add('win');
      }
      // Update streak / wins
      if(firstSym==='7Ô∏è‚É£'){ // jackpot
        wins += 10;
      } else if(firstSym==='‚≠ê'){ // multiplier
        wins += 5;
      } else {
        wins += 1;
      }
      streak++;
    }
  });

  if(!anyWin) streak=0;
  document.getElementById('scoreboard').textContent=`Wins: ${wins} | Streak: ${streak}`;

  // Optional: placeholder sounds
  // new Audio('spin.mp3').play();
  // if(anyWin) new Audio('win.mp3').play();
}
</script>

